@model IEnumerable<CoreApp.Models.ApplicantModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Applicant List</h2>

<p>
    <a asp-action="Create">Be Available for Work</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Landscaping)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Housework)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Construction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foodprep)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AutoMechanic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerService)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Administrative)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableNow)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Landscaping)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Housework)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Construction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Foodprep)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AutoMechanic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerService)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Administrative)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailableNow)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PersonID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PersonID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PersonID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
